{
  "openapi": "3.1.0",
  "info": {
    "title": "FitVibe API",
    "version": "1.0.0",
    "description": "OpenAPI specification for the FitVibe REST API. Generated from documentation anchors until automated zod-to-openapi wiring is complete.",
    "contact": {
      "name": "FitVibe Engineering",
