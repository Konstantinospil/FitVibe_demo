{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/__tests__/**/*.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
