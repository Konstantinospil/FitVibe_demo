{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": false,
      // Enable parallel execution for faster linting
      "dependsOn": []
    },
    "test": {
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "cache": false
    }
  }
}
